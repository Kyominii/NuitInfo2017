extends layout
block content
    .container(style="background-color:white;padding:10px")
        form(class="form-signin", name="connexionForm", method="post", action="/login")
            h2(class="form-signin-heading") Connexion

            input(class="form-control form-control-top", type="text", name="pseudo", placeholder="Pseudo")
            input(class="form-control form-control-bottom", type="password", name="password", placeholder="Mot de passe")
            button(class="btn btn-lg btn-primary btn-block" type="submit") Se connecter

            a(href="/signin") S'inscrire